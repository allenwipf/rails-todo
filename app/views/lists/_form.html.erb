<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>
  <div class="field">
    <%= f.label :due %><br>
    <%= f.datetime_select :due %>
  </div>
  <div class="field">
<!--     <%= f.label :user_id %><br> -->
    <%= f.hidden_field :user_id, :value => @params[:user_id].to_i%>
  </div><br>
  <div class="actions">
    <% if params[:id] %>
      <%= f.submit "Update Todo" %>
    <% else %>
      <%= f.submit "Schedule Todo" %>
    <% end %>
  </div>
<% end %>
